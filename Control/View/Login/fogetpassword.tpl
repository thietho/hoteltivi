<form id="frmForgotPassword">
    <div class="card">
        <div class="card-body">
            <h4 class="color-dark-2 mb-3"><strong>Quên mật khẩu</strong></h4>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email"
                           placeholder="Email">
                    <div class="invalid-feedback email"></div>
                </div>
            </div>

            <div class="form-group">
                <button type="button" class="btn btn-success" id="btnResetPassword">Cấp lại mật khẩu</button>
                <button type="button" class="btn btn-success" id="btnReturnLogin">Đăng nhập</button>
            </div>
        </div>

    </div>

</form>